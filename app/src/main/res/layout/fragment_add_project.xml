<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_project">

    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Title"
             />

        <EditText
            android:id="@+id/etCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etTitle"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Company Name"
             />

        <EditText
            android:id="@+id/etAboutCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etCompanyName"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="About Company"
            />

        <EditText
            android:id="@+id/etOverview"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/etAboutCompany"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Project Overview" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etOverview"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Description"
             />

        <Button
            android:id="@+id/btnCreateProj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etDescription"
            android:layout_marginTop="15dp"
            android:text="Create Project" />

    </RelativeLayout>


</FrameLayout>