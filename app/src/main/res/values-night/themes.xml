<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThePresentMovement" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/accent_grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:statusBarColor">?attr/colorPrimaryVariant</item> -->
       <!-- Customize your theme here. -->
    </style>


    <style name="NoticeAlert" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Icon -->
        <item name="materialAlertDialogTitleIconStyle">@style/IconStyling</item>

        <!-- Title -->
        <item name="materialAlertDialogTitleTextStyle">@style/TitleStyling</item>

        <!-- Body -->
        <item name="materialAlertDialogBodyTextStyle">@style/BodyStyling</item>

    </style>

    <style name="IconStyling" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Icon">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="TitleStyling" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="BodyStyling" parent="@style/MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>